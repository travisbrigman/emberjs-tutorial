<div class='product-details'>
  {{!HEADER}}
  <section>
    <h3>{{@name}}</h3>
    <div class='text-warning'>
      <FaIcon @icon='star' />
      <FaIcon @icon='star' />
      <FaIcon @icon='star' />
      <FaIcon @icon='star' />
      <FaIcon @icon='star-half' />
    </div>
  </section>
  {{!PRICE}}
  <section class={{unless @isDetails 'h4'}}>
    <del data-test-original-price class='small text-black-50'>{{currency @price.original}}</del>
    <i data-test-current-price class='text-danger font-weight-bold'>{{currency @price.current}}</i>
  </section>

  {{#if @isDetails}}
    <div class='d-flex justify-content-between align-items-end'>
      <h5>Color</h5>
      <div class='product-colors active-{{@color}}'>
        {{#each @colors as |colorInfo|}}
          <span data-test-color
            class='product-color {{concat 'color-' colorInfo.color}}'
            {{on 'click' (fn @onChangeColor colorInfo.color)}}
          ></span>
        {{/each}}
      </div>
      <button data-test-add-to-cart class='btn btn-info' type='button' {{on "click" this.addToCart}}><FaIcon
          @icon='shopping-cart'
        />
        Add to Cart</button>
    </div>
  {{/if}}
</div>